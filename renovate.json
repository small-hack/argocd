{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "argocd": {
    "fileMatch": ["\\.yaml$"],
    "packageRules": [
      {
        "matchUpdateTypes": ["patch"],
        "matchCurrentVersion": "!/^0/",
        "automerge": true
      }
  ]
  }
}
