{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    { 
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "argocd": {
    "fileMatch": ["\\.yaml$"]
  }
}
