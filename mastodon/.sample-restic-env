# this contains both the s3 endpoint AND the s3 bucket
export RESTIC_REPOSITORY="s3:s3.eu-central-003.backblazeb2.com/my-mastodon-bucket"

# in this file, you need to have a single line with your restic repo password. Make sure it's `chmod`ed to 600 and has only your user as the group.
export RESTIC_PASSWORD_FILE=./.mastodon-restic-password

export AWS_ACCESS_KEY_ID="access key id goes here"
export AWS_SECRET_ACCESS_KEY="secret key goes here"

# after sourcing this file, you can do the following to test: restic snapshots
